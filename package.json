{
  "name": "macbook-anti-theft-alarm",
  "version": "1.0.0",
  "description": "MacShieldAlarm - Anti-theft alarm system for MacBooks with MacShield protection",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-dmg": "electron-builder --mac dmg",
    "build-dmg-unsigned": "electron-builder --mac dmg --publish never",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dev-build": "electron-builder --mac dmg --publish never",
    "test-install": "./scripts/test-install.sh",
    "setup-icons": "./scripts/setup-icons.sh"
  },
  "keywords": [
    "electron",
    "alarm",
    "anti-theft",
    "macbook",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "sudo-prompt": "^9.2.1"
  },
  "build": {
    "appId": "com.tommyyau.macbook-anti-theft-alarm",
    "productName": "MacShieldAlarm",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json",
      "setup-guide.md",
      "assets/icons/*"
    ],
    "icon": "build/icon.icns",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": null
    },
    "dmg": {
      "title": "MacShieldAlarm",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "afterSign": "scripts/notarize.js"
  }
}
